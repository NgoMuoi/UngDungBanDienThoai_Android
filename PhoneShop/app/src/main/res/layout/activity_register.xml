<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/lightwhite"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_mail_24"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/holo_red_light"/>
    <EditText
        android:id="@+id/editTextHoTen"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="5dp"
        android:hint="Họ tên"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/holo_red_light"/>

    <EditText
        android:id="@+id/editTextTenDN"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:drawableLeft="@drawable/ic_baseline_account_box_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editTextMatKhau"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:hint="Mật khẩu"
        android:inputType="numberPassword"
        android:textColorHint="@android:color/holo_red_light" />

    <EditText
        android:id="@+id/editTextNhapLaiMK"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:hint="Nhập lại mật khẩu"
        android:inputType="numberPassword"
        android:textColorHint="@android:color/holo_red_light" />
    <EditText
        android:id="@+id/editTextSDT"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:textColorHint="@android:color/holo_red_light" />
    <EditText
        android:id="@+id/editTextDiaChi"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:elevation="5dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:hint="Địa chỉ"
        android:inputType="text"
        android:textColorHint="@android:color/holo_red_light" />
    <Button
        android:id="@+id/btnDangky"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="Đăng ký"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Hủy"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>