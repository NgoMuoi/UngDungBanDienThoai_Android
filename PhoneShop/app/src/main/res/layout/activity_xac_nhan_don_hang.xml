<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fullwhite"
    tools:context=".activity.XacNhanDonHang">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Thông Tin Giao Hàng"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edTenKKH"
                android:hint="Tên khách hàng"
                android:layout_gravity="center"
                android:inputType="text"
                android:background="@drawable/text"
                android:elevation="5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/edSDT"
                android:hint="Số điện thoại giao hàng"
                android:layout_gravity="center"
                android:inputType="phone"
                android:background="@drawable/text"
                android:elevation="5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/edDiaChi"
                android:hint="Địa chỉ giao hàng"
                android:layout_gravity="center"
                android:inputType="text"
                android:background="@drawable/text"
                android:elevation="5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        <EditText
            android:id="@+id/edNgaygiao"
            android:hint="Ngày giao"
            android:layout_gravity="center"
            android:inputType="date"
            android:background="@drawable/text"
            android:elevation="5dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDathang"
                android:text="Đặt Hàng"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/btnTrove"
                android:text="Trở về"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>